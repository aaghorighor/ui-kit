{
  "compilerOptions": {
    "outDir": "./lib",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": true,
    "jsx": "react",
    "typeRoots": [
      "packages/module.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "./packages/*/src/**/*.tsx",
    "./packages/*/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
